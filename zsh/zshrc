function changeMac() {
  local mac=$(openssl rand -hex 6 | sed 's/\(..\)/\1:/g; s/.$//')
  sudo ifconfig wlp4s0 ether $mac
  sudo ifconfig wlp4s0 down
  sudo ifconfig wlp4s0 up
  echo "Your new physical address is $mac"
}

