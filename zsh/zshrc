function goodnight() {
  powersave
  chromium http://homepages.neiu.edu/~mtailor/cs300/images/bluecolor.jpg
  xset s off
  echo "---"
  echo "--- Don't forget to move your mouse to the bottom right edge of the screen to disable the lock"
  echo "---"
  date
  sleep_until 06:30
  xbacklight -set 100%
  echo "--- Remember to do xset s"
}

