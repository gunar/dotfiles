function logdiff {
  if ((2==$#)); then
    a=$1
    b=$2
    alog=$(echo $a | tr '/' '-').log
    blog=$(echo $b | tr '/' '-').log
    git log --oneline $a > $alog
    git log --oneline $b > $blog
    diff $alog $blog
  fi
}

